<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Specificproducct">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/p"
        android:src="@color/green"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Products"
        android:id="@+id/showcategory"

        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="290dp"
        android:id="@+id/imageofproductselected"
        android:scaleType="fitXY"
        android:layout_below="@+id/p"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher_background"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show product"
        android:textColor="@color/black"
        android:id="@+id/showproductofselected"
        android:textSize="25dp"
        android:layout_below="@+id/imageofproductselected"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/showproductofselected"
            android:layout_marginTop="12dp"
            android:text="Reviews of the Product"
            android:id="@+id/showreview"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="25dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showcommentofproduct"
        android:layout_below="@+id/addcomments"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/showreview"
        android:id="@+id/addcomments"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="10dp"
        android:hint="Add comment"
        android:textSize="10dp"
        android:textColor="@color/black"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_done_all_24"
            android:layout_below="@+id/showreview"
            android:id="@+id/postcomment"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentEnd="true"
            />
    </RelativeLayout>





    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        android:elevation="20dp"
        android:background="@drawable/bar"
        android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Amount"
                        android:textColor="@color/black"
                        />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Show price"
                android:id="@+id/priceofselecteditem"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:textSize="20dp"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <Button
                    android:layout_width="195dp"
                    android:layout_marginRight="20dp"
                    android:layout_height="wrap_content"
                    android:text="Buy Now"
                    android:id="@+id/buynow"
                    android:layout_alignParentEnd="true"
                    />
                </RelativeLayout>
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>


</RelativeLayout>