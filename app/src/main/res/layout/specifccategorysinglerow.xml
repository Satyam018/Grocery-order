<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginVertical="4dp"
        android:id="@+id/specificcategoryimage"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_launcher_background"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/specificcategoryimage"
            android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:id="@+id/specificcatergoyname"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:text="Demo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/specificcategoryprice"
        android:text="90rs"
        android:textColor="@color/yellow"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/specificcategoryimage"
        android:layout_marginLeft="19dp"
        android:layout_below="@+id/specificcatergoyname"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_below="@+id/specificcategoryimage"
        android:src="@color/green"
        android:layout_marginLeft="89dp"/>



</RelativeLayout>