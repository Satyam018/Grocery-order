<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter your information"
        android:textColor="@color/green"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="22dp"
        android:layout_marginTop="4dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name of the person"
        android:id="@+id/orderpersoninfo"
        android:layout_marginTop="45dp"
        android:layout_marginHorizontal="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="House name"
        android:id="@+id/orderhousename"
        android:layout_below="@id/orderpersoninfo"
        android:layout_marginHorizontal="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="House no"
        android:inputType="number"
        android:id="@+id/orderhouseno"
        android:layout_below="@id/orderhousename"
        android:layout_marginHorizontal="10dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"

        android:id="@+id/orderlocation"
        android:layout_below="@id/orderhouseno"
        android:layout_marginHorizontal="10dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="city Name"

        android:id="@+id/ordercity"
        android:layout_below="@id/orderlocation"
        android:layout_marginHorizontal="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone no"
        android:inputType="number"
        android:id="@+id/orderphoneno"
        android:layout_below="@id/ordercity"
        android:layout_marginHorizontal="10dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderphoneno"
        android:id="@+id/orderquantity"
        android:hint="Quantity"
        android:inputType="number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:visibility="gone"
        android:text="Total amount:"
        android:textColor="@color/black"
        android:layout_below="@+id/orderquantity"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Rs.200"
        android:visibility="gone"
        android:textSize="25dp"
        android:id="@+id/orderprice"
        android:textStyle="bold"
        android:textColor="@color/yellow"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@+id/back"/>

   <Button
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_below="@+id/orderprice"
       android:layout_marginTop="5dp"
       android:id="@+id/confirmorder"
       android:visibility="gone"
       android:text="Confirm order"
       android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/orderprice"
        android:layout_marginTop="5dp"
        android:id="@+id/orderpricedetail"
        android:text="View price"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>