<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/groceryprofileback"
        android:src="@color/green"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grocery"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My orders"
        android:id="@+id/profileorders"
        android:textSize="22dp"
        android:layout_marginVertical="6dp"
        android:layout_below="@+id/groceryprofileback"
        android:layout_marginLeft="29dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileorders"
            android:src="@color/darkgrey"
            android:id="@+id/line1"
            android:layout_marginHorizontal="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/profilelogout"
        android:textSize="22dp"
        android:layout_marginVertical="6dp"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="29dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilelogout"
        android:src="@color/darkgrey"
        android:id="@+id/line2"
        android:layout_marginHorizontal="15dp"/>


</RelativeLayout>